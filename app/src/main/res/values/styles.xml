<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="heading">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="desc">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="light_regular_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#9D9D9D</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="regular_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#424242</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="box_text_input_layout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#ADADAD</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="box_search_input_layout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxCornerRadiusBottomEnd">50dp</item>
        <item name="boxCornerRadiusBottomStart">50dp</item>
        <item name="boxCornerRadiusTopEnd">50dp</item>
        <item name="boxCornerRadiusTopStart">50dp</item>
        <item name="boxBackgroundColor">#EFEBEB</item>

    </style>

    <style name="no_bottom_line_edittext" >
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorControlActivated">@android:color/transparent</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
    </style>


</resources>